<Window x:Class="homework1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:homework1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel >
            <TextBlock>Enter Name:</TextBlock>
            <TextBox x:Name="uxName" FontWeight="Bold" Background="#FFE1F5FF" TextChanged="TextChanged" ></TextBox>
            <TextBlock>Enter Password:</TextBlock>
            <TextBox x:Name="uxPassword" Background="#FFE8F7D3" TextChanged="TextChanged"></TextBox>
            <Button x:Name="uxSubmit" Click="uxSubmit_Click" Margin="0,5,0,0" IsEnabled="False">Submit</Button>
            <Button Margin="0,5,0,0">
                <CheckBox> Checked </CheckBox>                
            </Button>
        </StackPanel>
    </Grid>
</Window>