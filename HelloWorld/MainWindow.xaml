<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="253.444" Width="154.132">
    <Grid RenderTransformOrigin="0.484,0.741">
        <StackPanel >
            <TextBlock>Enter Name:</TextBlock>
            <TextBox x:Name="uxName" FontWeight="Bold" FontSize="18" Background="#FFE1F5FF"></TextBox>
            <TextBlock>Enter Password:</TextBlock>
            <TextBox x:Name="uxPassword" Background="#FFE8F7D3"></TextBox>
            <Button x:Name="uxSubmit" Click="uxSubmit_Click" ContextMenuOpening="uxSubmit_ContextMenuOpening" Margin="0,5,0,0">Submit</Button>
            <Button Padding="1,1,1,3" Margin="0,5">
                <CheckBox x:Name="uxCheckBox" Content="Check Me"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
